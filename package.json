{
  "name": "browser-newtab-dashboard",
  "version": "1.0.0",
  "description": "A customizable dashboard extension for Chrome and Firefox",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run copy-manifest && npm run copy-icons",
    "build:chrome": "tsc && vite build && npm run copy-manifest:chrome && npm run copy-icons",
    "build:firefox": "tsc && vite build && npm run copy-manifest:firefox && npm run copy-icons",
    "copy-manifest": "cp manifest.json dist/",
    "copy-manifest:chrome": "cp manifest.json dist/",
    "copy-manifest:firefox": "cp manifest.firefox.json dist/manifest.json",
    "copy-icons": "mkdir -p dist/icons && cp icons/*.png dist/icons/ 2>/dev/null || echo 'Warning: PNG icons not found. Run npm run generate-icons first.'",
    "generate-icons": "node scripts/generate-icons.mjs",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.4.4",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-grid-layout": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
